server {
  listen 80;

  satisfy any;
  allow 10.0.0.0/8;
  deny all;
  auth_basic "Restricted Access for <%= @app_name %> staging";
  auth_basic_user_file /etc/nginx/conf.d/htpasswd;

  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $http_host;
    proxy_pass http://127.0.0.1:2368;
  }
}
