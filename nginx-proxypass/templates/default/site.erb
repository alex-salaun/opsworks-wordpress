upstream unicorn_<%= @domain %> {
 server unix:/srv/www/<%= default[:nginx_proxy][:application_name] %>/shared/sockets/unicorn.sock fail_timeout=0;
}

server {
  listen 80;
  server_name <%= @domain %>;

  access_log /var/log/nginx/<%= @domain %>.access.log;

  keepalive_timeout 5;

  root /srv/www/<%= default[:nginx_proxy][:application_name] %>/current/public/;

  location / {
    try_files $uri/index.html $uri/index.htm @unicorn;
  }

  location @unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_read_timeout 60;
    proxy_send_timeout 60;

    # If you don't find the filename in the static files
    # Then request it from the unicorn server
    if (!-f $request_filename) {
      proxy_pass http://unicorn_<%= @domain %>;
      break;
    }
  }

  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /srv/www/<%= default[:nginx_proxy][:application_name] %>/current/public/;
  }

  location /blog {
    proxy_redirect off;
    proxy_cache off;
    proxy_pass <%= default[:nginx_proxy][:proxy_url] %>;
  }
}
