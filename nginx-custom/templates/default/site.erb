upstream unicorn_<%= @domain %> {
 server unix:/srv/www/<%= @app_name %>/shared/sockets/unicorn.sock fail_timeout=0;
}

server {
  listen 80;
  server_name <%= @domain %> <%= @app_name %>;

  access_log /var/log/nginx/<%= @domain %>.access.log;

  keepalive_timeout 5;

  root /srv/www/<%= @app_name %>/current/public/;

  if ($http_host = "job.siliconsalad.com") {
    rewrite ^(.*)$ http://www.siliconsalad.com/recrutement/ permanent;
  }

  if ($http_host = "jobs.siliconsalad.com") {
    rewrite ^(.*)$ http://www.siliconsalad.com/recrutement/ permanent;
  }

  if ($http_host !~* "<%= @domain %>") {
    rewrite ^(.*)$ http://<%= @domain %>$1 permanent;
  }

  rewrite ^/blog$ /blog/ permanent;
  rewrite ^/blog/wp-admin$ /blog/wp-admin/ permanent;
  rewrite ^/wp-content(.*)$ /blog/wp-content$1 permanent;

  if ($uri !~ "^/robots.txt") {
   set $rule_0 1$rule_0;
  }
  if ($uri !~ "^/blog") {
    set $rule_0 2$rule_0;
  }
  if ($uri !~ "/fonts/") {
    set $rule_0 3$rule_0;
  }
  if ($uri !~ "^/logos/") {
    set $rule_0 4$rule_0;
  }
  if ($uri !~ ".jpg|.svg|.png|.jpeg|.html|.css|.js|.xml|.pdf|.ico") {
    set $rule_0 5$rule_0;
  }
  if ($uri !~ "^/projects") {
    set $rule_0 6$rule_0;
  }
  if ($rule_0 = "654321") {
    rewrite ^(.*[^/])$ $1/ permanent;
  }

  client_max_body_size 11M;

  set_real_ip_from 10.0.0.0/8;
  real_ip_header   X-Forwarded-For;

  location / {
    try_files $uri/index.html $uri/index.htm @unicorn;
  }

  location @unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_read_timeout 60;
    proxy_send_timeout 60;

    # If you don't find the filename in the static files
    # Then request it from the unicorn server
    if (!-f $request_filename) {
      proxy_pass http://unicorn_<%= @domain %>;
      break;
    }
  }

  location /blog {
    proxy_redirect off;
    proxy_cache off;
    proxy_pass <%= @proxy_url %>;
    proxy_set_header X-Origin-Server nginx-proxy-pass;
    proxy_pass_request_headers on;
  }

  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }

  error_page 503 @maintenance;
  location @maintenance {
    rewrite  ^(.*)$  /maintenance.html last;
    break;
  }

  error_page 500 502 504 /500.html;
  location = /500.html {
    root /srv/www/<%= @app_name %>/current/public/;
  }
}
